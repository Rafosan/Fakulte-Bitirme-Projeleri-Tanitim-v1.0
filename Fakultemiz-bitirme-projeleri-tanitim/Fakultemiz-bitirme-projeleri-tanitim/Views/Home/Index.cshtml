@using EntityLayer.Concrete
@model List<Project>
<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Isparta Uygulamalı Bilimler Üniversitesi</title>
    <link rel="stylesheet" href="~/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/fontawesome/css/all.min.css" />
    <link rel="stylesheet" href="~/css/templatemo-style.css" />
    <link rel="stylesheet"
          href="~/https://cdnjs.cloudflare.com/ajax/libs/font-awesome/4.7.0/css/font-awesome.min.css" />
</head>
<body>
    <!-- Page Loader -->
    <div id="loader-wrapper">
        <div id="loader"></div>

        <div class="loader-section section-left"></div>
        <div class="loader-section section-right"></div>
    </div>
    <nav class="navbar navbar-expand-lg">
        <div class="container-fluid">
            <a class="navbar-brand"
               href="https://teknoloji.isparta.edu.tr/tr/"
               target="_blank">
                <img style="width: 80px" src="~/img/logo.png" alt="logo" />
                Isparta Uygulamalı Bilimler Üniversitesi Teknoloji Fakültesi
            </a>
            <button class="navbar-toggler"
                    type="button"
                    data-toggle="collapse"
                    data-target="#navbarSupportedContent"
                    aria-controls="navbarSupportedContent"
                    aria-expanded="false"
                    aria-label="Toggle navigation">
                <i class="fas fa-bars"></i>
            </button>
            <div class="collapse navbar-collapse" id="navbarSupportedContent">
                <ul class="navbar-nav ml-auto mb-2 mb-lg-0">
                    <li class="nav-item">
                        <a class="nav-link nav-link-1 active"
                           aria-current="page"
                           href="student.html">Öğrenci Girişi</a>
                    </li>

                    <li class="nav-item">
                        <a class="nav-link nav-link-1 active" href="teacher.html">Admin ve Akademisyen girişi</a>
                    </li>
                </ul>
            </div>
        </div>
    </nav>
    <!--Search Start-->
    <div class="tm-hero d-flex justify-content-center align-items-center">
        <form class="d-flex tm-search-form">
            <input class="form-control tm-search-input"
                   type="search"
                   placeholder="Arama"
                   aria-label="Search" />
            <button class="btn btn-outline-success tm-search-btn" type="submit">
                <i class="fas fa-search"></i>
            </button>
        </form>
    </div>
    <!--Search end-->

    <div class="container-fluid tm-container-content tm-mt-60">
        <div class="row mb-4">
            <h2 class="col-6 tm-text-primary">Bitirme Projeleri</h2>
            <div class="col-6 d-flex justify-content-end align-items-center">
                <form action="" class="tm-text-primary">
                    Sayfa
                    <input type="text"
                           value="1"
                           size="1"
                           class="tm-input-paging tm-text-primary" />
                </form>
            </div>
        </div>
        <!--Sidenav Start-->
        <div class="row tm-mb-90 tm-gallery">
            <div class="sidenav">
                <button class="dropdown-btn">
                    Yıllar
                    <i class="fa fa-caret-down"></i>
                </button>
                <div class="dropdown-container">
                    <a href="#">2023</a>
                    <a href="#">2024</a>
                    <a href="#">2025</a>
                </div>
                <button class="dropdown-btn">
                    Bölümler
                    <i class="fa fa-caret-down"></i>
                </button>
                <div class="dropdown-container">
                    <a href="#">Bilgisayar mühendisliği</a>
                    <a href="#">Makine mühendisliği</a>
                </div>
                <button class="dropdown-btn">
                    Danışmanlar
                    <i class="fa fa-caret-down"></i>
                </button>
                <div class="dropdown-container">
                    <a href="#">Tuncay Aydoğan</a>
                    <a href="#">Sinan Uğuz</a>
                    <a href="#">Kıyas Kayaalp</a>
                </div>
                <button class="dropdown-btn">
                    Konular
                    <i class="fa fa-caret-down"></i>
                </button>
                <div class="dropdown-container">
                    <a href="#">A</a>
                    <a href="#">B</a>
                    <a href="#">C</a>
                </div>
            </div>
            <!--Sidenav End-->
            @foreach(var item in Model){
            <div class="col-xl-3 col-lg-4 col-md-6 col-sm-6 col-12 mb-5">
                <figure class="effect-ming tm-video-item">
                    <img src="~/img/img-03.jpg" alt="Image" class="img-fluid" />
                    <figcaption class="d-flex align-items-center justify-content-center">
                        <a href="~/AnasayfaTemplate/project-detail.html">View more</a>
                    </figcaption>
                </figure>
                <div class="d-flex justify-content-between tm-text-gray">
                    <h6 class="tm-text-gray-light">@item.Name</h6>
                    <h6>@item.CreationTime</h6>
                </div>
            </div>
            @if(item.ProjectID %3==0){
                <div class="w-100"></div>
                                     }
            }
        <!-- row -->
        <div class="row tm-mb-90">
            <div class="col-12 d-flex justify-content-between align-items-center tm-paging-col">
                <a href="javascript:void(0);"
                   class="btn btn-primary tm-btn-prev mb-2 disabled">Önceki sayfa</a>
                <div class="tm-paging d-flex">
                    <a href="javascript:void(0);" class="active tm-paging-link">1</a>
                    <a href="javascript:void(0);" class="tm-paging-link">2</a>
                    <a href="javascript:void(0);" class="tm-paging-link">3</a>
                    <a href="javascript:void(0);" class="tm-paging-link">4</a>
                </div>
                <a href="javascript:void(0);" class="btn btn-primary tm-btn-next">Sonraki sayfa</a>
            </div>
        </div>
    </div>
    <!-- footer Start -->
    <footer class="tm-bg-gray pt-5 pb-3 tm-text-gray tm-footer">
        <div class="container-fluid tm-container-small">
            <div class="row">
                <div class="col-lg-6 col-md-12 col-12 px-5 mb-5">
                    <h3 class="tm-text-primary mb-4 tm-footer-title">Üniversitemiz</h3>
                    <p>
                        Hedeflerimiz arasında genelinde Türkiye’ye, özelinde Isparta’ya
                        katma değer oluşturmayı amaç edindik. Öğrencilerimize artı
                        değerler kazandırarak iş arayan değil, iş için aranan elemanlar
                        yetiştirmeyi, sanayi ile barışık ortak işler yürütebilmeyi, sanayi
                        ve tarım başta olmak üzere tüm sektörlerle iç içe olmayı sağlama
                        yönünde çalışmalar yapmaktayız.
                    </p>
                </div>
                <div class="col-lg-3 col-md-6 col-sm-6 col-12 px-5 mb-5">
                    <h3 class="tm-text-primary mb-4 tm-footer-title">Adres</h3>
                    <p>
                        Isparta Uygulamalı Bilimler Üniversitesi, 32200 Bahçelievler Mh.
                        102. Cd. No:24 ISPARTA
                    </p>
                </div>
                <div class="col-lg-3 col-md-6 col-sm-6 col-12 px-5 mb-5">
                    <h3 class="tm-text-primary mb-4 tm-footer-title">Sosyal Medya</h3>
                    <ul class="tm-social-links d-flex justify-content-end pl-0 mb-5">
                        <li class="mb-2">
                            <a href="https://twitter.com/isubu32" target="_blank">
                                <i class="fab fa-facebook"></i>
                            </a>
                        </li>
                        <li class="mb-2">
                            <a href="https://www.facebook.com/isubu32" target="_blank">
                                <i class="fab fa-twitter"></i>
                            </a>
                        </li>
                        <li class="mb-2">
                            <a href="https://www.instagram.com/isubu32/" target="_blank">
                                <i class="fab fa-instagram"></i>
                            </a>
                        </li>
                        <li class="mb-2">
                            <a href="https://eposta.isparta.edu.tr" target="_blank">
                                <i class="fa fa-envelope"></i>
                            </a>
                        </li>
                    </ul>
                </div>
            </div>
        </div>
    </footer>
    <!--footer end-->

    <script src="~/js/plugins.js"></script>
    <script>
        $(window).on("load", function () {
            $("body").addClass("loaded");
        });
    </script>
</body>
</html>
