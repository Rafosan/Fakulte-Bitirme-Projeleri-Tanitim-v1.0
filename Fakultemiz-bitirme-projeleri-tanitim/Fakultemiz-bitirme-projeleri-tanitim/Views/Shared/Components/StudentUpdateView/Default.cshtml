@using EntityLayer.Concrete
@model Project
@{
    Layout = "~/Views/Shared/_PanelLayout.cshtml";
}
<!DOCTYPE html>
<html>
<body>
    <div id="wrapper">
        <nav class="navbar-default navbar-static-side" role="navigation">
            <div class="sidebar-collapse">
                <ul class="nav metismenu" id="side-menu">
                    <li class="nav-header">
                        <div class="dropdown profile-element">
                            <a data-toggle="dropdown" class="dropdown-toggle" href="#">
                                <span class="block m-t-xs font-bold">Öğrenci Paneli</span>
                            </a>
                        </div>
                    </li>
                    <li class="active">
                        <a href="@Url.Action("Index","Student")">
                            <i class="fa fa-th-large"></i>
                            <span class="nav-label">Panel</span>
                            <span class="fa arrow"></span>
                        </a>
                        <ul class="nav nav-second-level">
                            <li>
                                <a href="@Url.Action("Index","Student")">Proje Ekleme</a>
                            </li>
                            <li class="active"><a href="@Url.Action("ProjectUpdate","Student")">Proje Güncelleme</a></li>
                            <li><a href="@Url.Action("ProjectStatus","Student")">Proje Durumu</a></li>
                            <li><a href="@Url.Action("Information","Student")">Bilgi Ekleme</a></li>

                        </ul>
                    </li>
                </ul>
            </div>
        </nav>

        <div id="page-wrapper" class="gray-bg dashbard-1">
            @await Html.PartialAsync("~/Views/Shared/Partial/PanelNavbarPartial.cshtml")
            
            <div class="row">
                <div class="col-lg-12">
                    <div class="ibox">
                        <div class="ibox-title">
                            <h5>Proje Güncelleme Formu</h5>
                        </div>
                        <div class="ibox-content">
                            @using (Html.BeginForm("ProjectUpdate", "Student", FormMethod.Post, new { enctype = "multipart/form-data" }))
                            {

                                <div class="form-group row">
                                    <label class="col-sm-2 col-form-label">Proje Adı : </label>
                                    <div class="col-sm-10">
                                        @Html.TextBoxFor(x=>x.Name,new { @class = "form-control", placeholder = "Başlık olarak gözükecek"})
                                        @Html.ValidationMessageFor(x=>x.Name)
                                    </div>
                                </div>
                                <div class="form-group row">
                                    <label class="col-sm-2 col-form-label">
                                        Projeyi yapan kişilerin adı soyadı :
                                    </label>

                                    <div class="col-sm-10">
                                        @Html.TextBoxFor(x=>x.Student.NameAndSurname,new { @class = "form-control",placeholder = "Aralarına virgül koyarak yazın"})
                                        @Html.ValidationMessageFor(x=>x.Student.NameAndSurname)
                                    </div>
                                </div>


                                <div class="form-group row">
                                    <label class="col-sm-2 col-form-label">
                                        Proje Konusu :
                                    </label>

                                    <div class="col-sm-10">
                                        @Html.TextBoxFor(x=>x.Subject,new { @class = "form-control",placeholder = "Resimlerin altında gözükecek" })
                                        @Html.ValidationMessageFor(x=>x.Subject)
                                    </div>
                                </div>
                                <div class="form-group row">
                                    <label class="col-sm-2 col-form-label">
                                        Proje Özeti :
                                    </label>

                                    <div class="col-sm-10">
                                        @Html.TextBoxFor(x=>x.Description,new { @class = "form-control",placeholder = "Konunun altında gözükecek" })
                                        @Html.ValidationMessageFor(x=>x.Description)
                                    </div>
                                </div>

                                <div class="form-group row">
                                    <label class="col-sm-2 col-form-label">Akademik Danışman :</label>

                                    <div class="col-sm-10">
                                        @Html.DropDownListFor(x => x.Teacher.NameAndSurname, new SelectList(new List<string>
                                    {
                                    "Tuncay Aydoğan", "Serdar Paçacı", "Burhan Duman"
                                    }), "Seçiniz", new { @class = "form-control " })
                                        @Html.ValidationMessageFor(x=>x.Teacher.NameAndSurname)
                                    </div>
                                </div>

                                <div class="form-group row">
                                    <label class="col-sm-2 col-form-label">
                                        Projenin Ana Sayfa Resmi :
                                    </label>

                                    <div class="col-sm-10">
                                        <input name="Image1" type="file" multiple />
                                        @Html.ValidationMessageFor(x=>x.Image1)
                                    </div>
                                </div>
                                <div class="form-group row">
                                    <label class="col-sm-2 col-form-label">
                                        Projenin 2.Resmi :
                                    </label>

                                    <div class="col-sm-10">
                                        <input name="file" type="file" multiple />
                                        @Html.ValidationMessageFor(x=>x.Image2)
                                    </div>
                                </div>
                                <div class="form-group row">
                                    <label class="col-sm-2 col-form-label">
                                        Projenin 3.Resmi :
                                    </label>

                                    <div class="col-sm-10">
                                        <input name="file" type="file" multiple />
                                        @Html.ValidationMessageFor(x=>x.Image3)
                                    </div>
                                </div>
                                <div class="form-group row">
                                    <label class="col-sm-2 col-form-label">
                                        Projenin 4.Resmi :
                                    </label>

                                    <div class="col-sm-10">
                                        <input name="file" type="file" multiple />
                                        @Html.ValidationMessageFor(x=>x.Image4)
                                    </div>
                                </div>
                                <div class="form-group row btn-kaydet">
                                    <button class="btn btn-lg btn-primary float-right m-t-n-xs"
                                            type="submit" id="StudentKaydet">
                                        <strong>Projeyi Kaydet</strong>
                                    </button>
                                </div>
                            }
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</body>
</html>

