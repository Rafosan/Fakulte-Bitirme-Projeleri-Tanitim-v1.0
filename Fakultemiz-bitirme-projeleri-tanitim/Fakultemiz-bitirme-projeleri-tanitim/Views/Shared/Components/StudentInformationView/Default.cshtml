@using EntityLayer.Concrete
@model Student
@{
    Layout = "~/Views/Shared/_PanelLayout.cshtml";
}
<!DOCTYPE html>
<html>
<body>
    <div id="wrapper">
        <nav class="navbar-default navbar-static-side" role="navigation">
            <div class="sidebar-collapse">
                <ul class="nav metismenu" id="side-menu">
                    <li class="nav-header">
                        <div class="dropdown profile-element">
                            <a data-toggle="dropdown" class="dropdown-toggle" href="#">
                                <span class="block m-t-xs font-bold">Öğrenci Paneli</span>
                                <span class="block m-t-xs font-bold">Kullanıcı Adı:@ViewBag.UserName</span>
                            </a>
                        </div>
                    </li>
                    <li class="active">
                        <a href="@Url.Action("Index","Student")">
                            <i class="fa fa-th-large"></i>
                            <span class="nav-label">Panel</span>
                            <span class="fa arrow"></span>
                        </a>
                        <ul class="nav nav-second-level">
                            <li>
                                <a href="@Url.Action("Index","Student")">Proje Ekleme</a>
                            </li>
                            <li><a href="@Url.Action("ProjectUpdate","Student")">Proje Güncelleme</a></li>
                            <li><a href="@Url.Action("ProjectStatus","Student")">Proje Durumu</a></li>
                            <li class="active"><a href="@Url.Action("Information","Student")">Bilgi Ekleme</a></li>
                        </ul>
                    </li>
                </ul>
            </div>
        </nav>

        <div id="page-wrapper" class="gray-bg dashbard-1">
            @await Html.PartialAsync("~/Views/Shared/Partial/PanelNavbarPartial.cshtml")
           
            <div class="row">
                <div class="col-lg-12">
                    <div class="ibox">
                        <div class="ibox-title">
                            <h5>Bilgi Ekleme Formu (Girdiğiniz bilgileri sadece akademik danışmanlar görebilecek)</h5>
                        </div>
                        <div class="ibox-content">
                            @using (Html.BeginForm("Information", "Student", FormMethod.Post))
                            {
                                <div class="form-group row">
                                    <label class="col-sm-2 col-form-label">E Posta: </label>

                                    <div class="col-sm-10">
                                        @if (!string.IsNullOrEmpty(Model.EMail))
                                        {
                                            @Html.TextBoxFor(x => x.EMail, new { @class = "form-control", placeholder = "", value = Model.EMail })
                                        }
                                        else
                                        {
                                            @Html.TextBoxFor(x => x.EMail, new { @class = "form-control", placeholder = "" })
                                        }
                                        @Html.ValidationMessageFor(x => x.EMail)
                                    </div>
                                </div>
                                <div class="form-group row">
                                    <label class="col-sm-2 col-form-label">
                                        Telefon Numarası :
                                    </label>

                                    <div class="col-sm-10">
                                        @if (!string.IsNullOrEmpty(Model.Number))
                                        {
                                            @Html.TextBoxFor(x => x.Number, new { @class = "form-control", placeholder = "", value = Model.Number })
                                        }
                                        else
                                        {
                                            @Html.TextBoxFor(x => x.Number, new { @class = "form-control", placeholder = "" })
                                        }
                                        @Html.ValidationMessageFor(x => x.Number)
                                    </div>
                                </div>

                                <div class="form-group row btn-kaydet">
                                    <button class="btn btn-lg btn-primary float-right m-t-n-xs"
                                            type="submit">
                                        <strong>Kaydet</strong>
                                    </button>
                                </div>
                                }
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</body>
</html>
