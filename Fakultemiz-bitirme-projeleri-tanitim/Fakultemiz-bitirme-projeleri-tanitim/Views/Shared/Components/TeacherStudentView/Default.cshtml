@using EntityLayer.Concrete
@model List<Student>
@{
    Layout = "~/Views/Shared/_PanelLayout.cshtml";
}
<!DOCTYPE html>
<html>
<body>
    <div id="wrapper">
        <nav class="navbar-default navbar-static-side" role="navigation">
            <div class="sidebar-collapse">
                <ul class="nav metismenu" id="side-menu">
                    <li class="nav-header">
                        <div class="dropdown profile-element">
                            <a data-toggle="dropdown" class="dropdown-toggle" href="#">
                                <span class="block m-t-xs font-bold">Akademik Danışman Paneli</span>
                                <span class="text-muted text-xs block">Kullanıcı Adı:@ViewBag.TeacherName</span>
                            </a>
                        </div>
                    </li>
                    <li class="active">
                        <a href="teacher_index.html">
                            <i class="fa fa-th-large"></i>
                            <span class="nav-label">Panel</span>
                            <span class="fa arrow"></span>
                        </a>
                        <ul class="nav nav-second-level">
                            <li>
                                <a href="@Url.Action("Index","Teacher")">Proje Yayınlama </a>
                            </li>
                            <li><a href="@Url.Action("ProjectStatus","Teacher")">Proje Görüntüleme</a></li>
                            <li><a href="@Url.Action("ProjectDelete","Teacher")">Proje Silme</a></li>
                            <li class="active"><a href="@Url.Action("StudentInformation","Teacher")">Öğrenci Bilgileri</a></li>
                        </ul>
                    </li>
                </ul>
            </div>
        </nav>

        <div id="page-wrapper" class="gray-bg dashbard-1">
            @await Html.PartialAsync("~/Views/Shared/Partial/PanelNavbarPartial.cshtml")

            <div class="row">
                <div class="col-lg-12">
                    <div class="ibox ">
                        <div class="ibox-title">
                            <h5>Öğrenci Bilgileri Sayfası</h5>

                        </div>
                        <div class="ibox-content">

                            <div class="table-responsive">
                                <table class="table table-striped table-bordered table-hover dataTables-example">
                                    <thead>
                                        <tr>
                                            <th>#</th>
                                            <th>Proje Sahiplerinin Adları</th>
                                            <th>Bölümü</th>
                                            <th>E Posta</th>
                                            <th>Telefon Numarası</th>
                                        </tr>
                                    </thead>
                                    <tbody>
                                        @{int count = 1;}
                                        @foreach (var item in Model)
                                        {
                                            <tr class="gradeX">
                                                <td>@count</td>
                                                <td>@item.NameAndSurname</td>
                                                <td>@item.DepartmentCode</td>
                                                <td>@item.EMail</td>
                                                <td>@item.Number</td>
                                            </tr>
                                            count++;
                                        }
                                    </tbody>
                                </table>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</body>
</html>
