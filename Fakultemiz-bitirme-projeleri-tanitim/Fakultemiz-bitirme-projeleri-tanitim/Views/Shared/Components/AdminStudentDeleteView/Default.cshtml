@using EntityLayer.Concrete
@model List<Student>
@{
    Layout = "~/Views/Shared/_PanelLayout.cshtml";
}
<!DOCTYPE html>
<html>
<body>
    <div id="wrapper">
        <nav class="navbar-default navbar-static-side" role="navigation">
            <div class="sidebar-collapse">
                <ul class="nav metismenu" id="side-menu">
                    <li class="nav-header">
                        <div class="dropdown profile-element">
                            <a data-toggle="dropdown" class="dropdown-toggle" href="#">
                                <span class="block m-t-xs font-bold">Bilge Gökkaya</span>
                                <span class="text-muted text-xs block">Admin</span>
                            </a>
                        </div>
                    </li>
                    <li>
                        <a href="@Url.Action("Index","Admin")">
                            <i class="fa fa-th-large"></i>
                            <span class="nav-label">Akademik Danışman İşlemleri</span>
                            <span class="fa arrow"></span>
                        </a>
                        <ul class="nav nav-second-level">
                            <li>
                                <a href="@Url.Action("Index","Admin")">Akademik Danışman Ekle </a>
                            </li>
                            <li><a href="@Url.Action("TeacherDelete","Admin")">Akademik Danışman Sil</a></li>
                            <li><a href="@Url.Action("TeacherList","Admin")">Akademik Danışman Listele</a></li>

                        </ul>
                    </li>
                    <li class="active">
                        <a href="@Url.Action("StudentIndex","Admin")">
                            <i class="fa fa-th-large"></i>
                            <span class="nav-label">Öğrenci İşlemleri</span>
                            <span class="fa arrow"></span>
                        </a>
                        <ul class="nav nav-second-level">
                            <li>
                                <a href="@Url.Action("StudentIndex","Admin")">Öğrenci Ekle </a>
                            </li>
                            <li class="active"><a href="@Url.Action("StudentDelete","Admin")">Öğrenci Sil</a></li>
                            <li><a href="@Url.Action("StudentList","Admin")">Öğrenci Listele</a></li>

                        </ul>
                    </li>
                </ul>
            </div>
        </nav>

        <div id="page-wrapper" class="gray-bg dashbard-1">
            <div class="row border-bottom">
                <nav class="navbar navbar-static-top"
                     role="navigation"
                     style="margin-bottom: 0">
                    <div class="navbar-header">
                        <a class="navbar-minimalize minimalize-styl-2 btn btn-primary"
                           href="#">
                            <i class="fa fa-bars"></i>
                        </a>
                    </div>
                    <ul class="nav navbar-top-links navbar-right">
                        <li style="padding: 20px">
                            <span class="m-r-sm text-muted welcome-message">ISUBÜ TEKNOLOJİ FAKÜLTESİ BİTİRME PROJELERİ ADMİN SAYFASI </span>
                        </li>

                        <li>
                            <a href="@Url.Action("Index","Home")">
                                <i class="fa fa-sign-out"></i> Log out
                            </a>
                        </li>
                    </ul>
                </nav>
            </div>

            <div class="row">
                <div class="col-lg-12">
                    <div class="ibox ">
                        <div class="ibox-title">
                            <h5>Öğrenci Silme Formu</h5>

                        </div>
                        <div class="ibox-content">

                            <div class="table-responsive">
                                <table class="table table-striped table-bordered table-hover dataTables-example">
                                    <thead>
                                        <tr>
                                            <th>#</th>
                                            <th>Öğrenci Adı</th>
                                            <th>Öğrenci Bölümü</th>
                                            <th>Öğrenci Kullanıcı Adı</th>
                                            <th>Öğrenci Şifre</th>
                                            <th>Silinsin mi</th>
                                        </tr>

                                    </thead>

                                    <tbody>
                                        @foreach(var item in Model){
                                        <tr class="gradeX">
                                            <td>@item.ID</td>
                                            <td>@item.NameAndSurname</td>
                                            <td>@item.DepartmentCode</td>
                                            <td>@item.UserName</td>
                                            <td>@item.Password</td>
                                            <td>
                                                    <form action="@Url.Action("StudentDelete", "Admin")" method="post">
                                                        <input type="hidden" name="id" value="@item.ID" />
                                                        <button type="submit" class="btn btn-danger">Sil</button>
                                                    </form>
                                            </td>
                                        </tr>
                                        }
                                    </tbody>
                                </table>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</body>
</html>
