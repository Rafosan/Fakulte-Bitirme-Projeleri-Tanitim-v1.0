@using EntityLayer.Concrete
@model List<Project>
@{
    Layout = "~/Views/Shared/_PanelLayout.cshtml";
}
<!DOCTYPE html>
<html>
<body>
    <div id="wrapper">
        <nav class="navbar-default navbar-static-side" role="navigation">
            <div class="sidebar-collapse">
                <ul class="nav metismenu" id="side-menu">
                    <li class="nav-header">
                        <div class="dropdown profile-element">
                            <a data-toggle="dropdown" class="dropdown-toggle" href="#">
                                <span class="block m-t-xs font-bold">Bilge Gökkaya</span>
                                <span class="text-muted text-xs block">Akademik Danışman</span>
                            </a>
                        </div>
                    </li>
                    <li class="active">
                        <a href="@Url.Action("Index","Teacher")">
                            <i class="fa fa-th-large"></i>
                            <span class="nav-label">Panel</span>
                            <span class="fa arrow"></span>
                        </a>
                        <ul class="nav nav-second-level">
                            <li>
                                <a href="@Url.Action("Index","Teacher")">Proje Yayınlama </a>
                            </li>
                            <li class="active"><a href="@Url.Action("ProjectStatus","Teacher")">Proje Görüntüleme</a></li>


                        </ul>
                    </li>
                </ul>
            </div>
        </nav>

        <div id="page-wrapper" class="gray-bg dashbard-1">
            <div class="row border-bottom">
                <nav class="navbar navbar-static-top"
                     role="navigation"
                     style="margin-bottom: 0">
                    <div class="navbar-header">
                        <a class="navbar-minimalize minimalize-styl-2 btn btn-primary"
                           href="#">
                            <i class="fa fa-bars"></i>
                        </a>
                    </div>
                    <ul class="nav navbar-top-links navbar-right">
                        <li style="padding: 20px">
                            <span class="m-r-sm text-muted welcome-message">ISUBÜ TEKNOLOJİ FAKÜLTESİ BİTİRME PROJELERİ AKADEMİK DANIŞMAN SAYFASI </span>
                        </li>

                        <li>
                            <a href="@Url.Action("Index","Home")">
                                <i class="fa fa-sign-out"></i> Log out
                            </a>
                        </li>
                    </ul>
                </nav>
            </div>

            <div class="row">
                <div class="col-lg-12">
                    <div class="ibox ">
                        <div class="ibox-title">
                            <h5>Proje Görüntüleme Sayfası</h5>

                        </div>
                        <div class="ibox-content">
                            <h5>Yayınlanan Projeler</h5>
                            <div class="table-responsive">
                                <table class="table table-striped table-bordered table-hover dataTables-example">
                                    <thead>
                                        <tr>
                                            <th>#</th>
                                            <th>Proje Adı</th>
                                            <th>Proje Sahibinin Adı</th>
                                            <th>Bölümü</th>
                                            <th>Yılı</th>
                                            <th>Konusu</th>
                                            <th>özeti</th>
                                            <th>Resim 1</th>
                                            <th>Resim 2</th>
                                            <th>Resim 3</th>
                                            <th>Resim 4</th>
                                            <th>Durum</th>

                                        </tr>

                                    </thead>

                                    <tbody>
                                        @foreach(var item in Model){
                                            if (item.Status == true)
                                            {
                                                <tr class="gradeX">
                                                    <td>@item.ProjectID</td>
                                                    <td>@item.Name</td>
                                                    <td>@item.Student</td>
                                                    <td>@item.Student</td>
                                                    <td>@item.CreationTime</td>
                                                    <td>@item.Subject</td>
                                                    <td>@item.Description</td>
                                                    <td>@item.Image1</td>
                                                    <td>@item.Image2</td>
                                                    <td>@item.Image3</td>
                                                    <td>@item.Image4</td>
                                                    <td>
                                                        <form action="@Url.Action("ProjectStatus", "Teacher")" method="post">
                                                            <input type="hidden" name="id" value="@item.ProjectID" />
                                                            <button type="submit" class="btn btn-danger">Yayından Kaldır</button>
                                                        </form>
                                                    </td>
                                                </tr>
                                            }
                                        }
                                    </tbody>
                                </table>
                            </div>

                        </div>
                        <div class="ibox-content">
                            <h5>Yayınlanmayan Projeler</h5>
                            <div class="table-responsive">
                                <table class="table table-striped table-bordered table-hover dataTables-example">
                                    <thead>
                                        <tr>
                                            <th>#</th>
                                            <th>Proje Adı</th>
                                            <th>Proje Sahibinin Adı</th>
                                            <th>Bölümü</th>
                                            <th>Yılı</th>
                                            <th>Konusu</th>
                                            <th>özeti</th>
                                            <th>Resim 1</th>
                                            <th>Resim 2</th>
                                            <th>Resim 3</th>
                                            <th>Resim 4</th>
                                            <th>Durum</th>
                                        </tr>

                                    </thead>

                                    <tbody>
                                        @foreach (var item in Model)
                                        {
                                            if (item.Status == false)
                                            {
                                                <tr class="gradeX">
                                                    <td>@item.ProjectID</td>
                                                    <td>@item.Name</td>
                                                    <td>@item.Student</td>
                                                    <td>@item.Student</td>
                                                    <td>@item.CreationTime</td>
                                                    <td>@item.Subject</td>
                                                    <td>@item.Description</td>
                                                    <td>@item.Image1</td>
                                                    <td>@item.Image2</td>
                                                    <td>@item.Image3</td>
                                                    <td>@item.Image4</td>
                                                    <td>
                                                        <form action="@Url.Action("ProjectStatus", "Teacher")" method="post">
                                                            <input type="hidden" name="id" value="@item.ProjectID" />
                                                            <button type="submit" class="btn btn-danger">Yayına Al</button>
                                                        </form>
                                                    </td>
                                                </tr>
                                            }
                                        }
                                    </tbody>

                                </table>

                            </div>

                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</body>
</html>
