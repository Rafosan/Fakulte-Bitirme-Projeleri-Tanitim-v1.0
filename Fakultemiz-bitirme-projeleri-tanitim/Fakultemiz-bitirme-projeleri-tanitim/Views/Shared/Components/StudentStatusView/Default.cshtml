@using EntityLayer.Concrete
@model Project
@{
    Layout = "~/Views/Shared/_PanelLayout.cshtml";
}
<!DOCTYPE html>
<html>
<body>
    <div id="wrapper">
        <nav class="navbar-default navbar-static-side" role="navigation">
            <div class="sidebar-collapse">
                <ul class="nav metismenu" id="side-menu">
                    <li class="nav-header">
                        <div class="dropdown profile-element">
                            <a data-toggle="dropdown" class="dropdown-toggle" href="#">
                                <span class="block m-t-xs font-bold">Öğrenci Paneli</span>
                                <span class="block m-t-xs font-bold">Kullanıcı Adı:@ViewBag.UserName</span>
                            </a>
                        </div>
                    </li>
                    <li class="active">
                        <a href="@Url.Action("Index","Student")">
                            <i class="fa fa-th-large"></i>
                            <span class="nav-label">Panel</span>
                            <span class="fa arrow"></span>
                        </a>
                        <ul class="nav nav-second-level">
                            <li>
                                <a href="@Url.Action("Index","Student")">Proje Ekleme</a>
                            </li>
                            <li><a href="@Url.Action("ProjectUpdate","Student")">Proje Güncelleme</a></li>
                            <li class="active"><a href="@Url.Action("ProjectStatus","Student")">Proje Durumu</a></li>
                            <li><a href="@Url.Action("Information","Student")">Bilgi Ekleme</a></li>

                        </ul>
                    </li>
                </ul>
            </div>
        </nav>

        <div id="page-wrapper" class="gray-bg dashbard-1">
            @await Html.PartialAsync("~/Views/Shared/Partial/PanelNavbarPartial.cshtml")

            <div class="row">
                <div class="col-lg-12">
                    <div class="ibox">
                        <div class="ibox-title">
                            <h5>Proje Durum Sayfası</h5>
                        </div>
                        <div class="col-lg-12">
                            <div class="ibox ">
                                <div class="ibox-content">
                                    <table class="table table-bordered">
                                        <thead>
                                            <tr>
                                                <th>#</th>
                                                <th>Proje Adı</th>
                                                <th>Yükleme Tarihi</th>
                                                <th>Konu</th>
                                                <th>Açıklama</th>
                                                <th>Resim1</th>
                                                <th>Resim2</th>
                                                <th>Resim3</th>
                                                <th>Resim4</th>
                                                <th>Yayınlanma Durumu</th>
                                            </tr>
                                        </thead>
                                        <tbody>
                                            @if (Model != null)
                                            {
                                                <tr>
                                                    <td>1</td>
                                                    <td>@Model.Name</td>
                                                    <td>@Model.CreationTime</td>
                                                    <td>@Model.Subject</td>
                                                    <td>@Model.Description</td>
                                                    <td>
                                                        @{
                                                            if (Model.Image1 != null && Model.Image1.Length > 0)
                                                            {
                                                                byte[] imageBytes = Model.Image1;
                                                                string base64String = Convert.ToBase64String(imageBytes);
                                                                string imgSrc = string.Format("data:image/jpeg;base64,{0}", base64String);
                                                                <img src="@imgSrc" alt="Image1" width="150" height="150" />
                                                            }
                                                        }
                                                    </td>
                                                    <td>
                                                        @{
                                                            if (Model.Image2 != null && Model.Image2.Length > 0)
                                                            {
                                                                byte[] imageBytes2 = Model.Image2;
                                                                string base64String2 = Convert.ToBase64String(imageBytes2);
                                                                string imgSrc2 = string.Format("data:image/jpeg;base64,{0}", base64String2);
                                                                <img src="@imgSrc2" alt="Image2" width="150" height="150" />
                                                            }
                                                        }
                                                    </td>
                                                    <td>
                                                        @{
                                                            if (Model.Image3 != null && Model.Image3.Length > 0)
                                                            {
                                                                byte[] imageBytes3 = Model.Image3;
                                                                string base64String3 = Convert.ToBase64String(imageBytes3);
                                                                string imgSrc3 = string.Format("data:image/jpeg;base64,{0}", base64String3);
                                                                <img src="@imgSrc3" alt="Image3" width="150" height="150" />
                                                            }
                                                        }
                                                    </td>
                                                    <td>
                                                        @{
                                                            if (Model.Image4 != null && Model.Image4.Length > 0)
                                                            {
                                                                byte[] imageBytes4 = Model.Image4;
                                                                string base64String4 = Convert.ToBase64String(imageBytes4);
                                                                string imgSrc4 = string.Format("data:image/jpeg;base64,{0}", base64String4);
                                                                <img src="@imgSrc4" alt="Image4" width="150" height="150" />
                                                            }
                                                        }
                                                    </td>
                                                    <td>
                                                        @if (Model.Status == true)
                                                        {
                                                            <span>Yayınlandı</span>
                                                        }
                                                        else
                                                        {
                                                            <span>Yayınlanmadı</span>
                                                        }
                                                    </td>
                                                </tr>
                                            }
                                            else
                                            {
                                                <tr>
                                                    <td colspan="6">Proje bulunamadı.</td>
                                                </tr>
                                            }
                                        </tbody>
                                    </table>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</body>
</html>
